<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>
	<log4net>
		<!-- 定义日志记录器 -->
		<root>
			<!-- 设置日志级别为最低级别，以便捕获所有级别的日志 -->
			<level value="ALL" />
			<!-- 添加对每个级别Appender的引用 -->
			<appender-ref ref="DebugAppender" />
			<appender-ref ref="InfoAppender" />
			<appender-ref ref="WarnAppender" />
			<appender-ref ref="ErrorAppender" />
			<!-- 注意：通常不会同时启用所有级别的Appender到同一个日志记录器，这里只是为了示例 -->
			<!-- 在实际应用中，你可能需要根据日志级别使用不同的记录器或过滤器 -->
		</root>

		<!-- DEBUG级别的Appender -->
		<appender name="DebugAppender" type="log4net.Appender.RollingFileAppender">
			<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
			<Encoding value="UTF-8" />
			<file value="Logs\Debug\" />
			<appendToFile value="true" />
			<rollingStyle value="Composite" />
			<datePattern value="yyyyMMdd&quot;.log&quot;" />
			<maxSizeRollBackups value="-1" />
			<maximumFileSize value="10MB" />
			<staticLogFileName value="false" />
			<!--只有指定等级的日志事件才被记录-->
			<filter type="log4net.Filter.LevelRangeFilter">
				<levelMin value="DEBUG" />
				<levelMax value="DEBUG" />
			</filter>
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date  异常:%exception 描述:%message%newline" />
			</layout>
		</appender>

		<!-- INFO级别的Appender -->
		<appender name="InfoAppender" type="log4net.Appender.RollingFileAppender">
			<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
			<Encoding value="UTF-8" />
			<file value="Logs\Info\" />
			<appendToFile value="true" />
			<rollingStyle value="Composite" />
			<datePattern value="yyyyMMdd&quot;.log&quot;" />
			<maxSizeRollBackups value="-1" />
			<maximumFileSize value="10MB" />
			<staticLogFileName value="false" />
			<!--只有指定等级的日志事件才被记录-->
			<filter type="log4net.Filter.LevelRangeFilter">
				<levelMin value="INFO" />
				<levelMax value="INFO" />
			</filter>
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date  信息描述:%message%newline" />
			</layout>
		</appender>
		<!-- WARN级别的Appender -->
		<!-- ... 类似地，为WARN级别定义一个Appender，只更改文件名 -->
		<appender name="WarnAppender" type="log4net.Appender.RollingFileAppender">
			<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
			<Encoding value="UTF-8" />
			<file value="Logs\Warn\" />
			<appendToFile value="true" />
			<rollingStyle value="Composite" />
			<datePattern value="yyyyMMdd&quot;.log&quot;" />
			<maxSizeRollBackups value="-1" />
			<maximumFileSize value="10MB" />
			<staticLogFileName value="false" />
			<!--只有指定等级的日志事件才被记录-->
			<filter type="log4net.Filter.LevelRangeFilter">
				<levelMin value="WARN" />
				<levelMax value="WARN" />
			</filter>
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date  扩展信息:%property  异常:%exception  警告信息:%message%newline" />
			</layout>
		</appender>

		<!-- ERROR级别的Appender -->
		<!-- ... 类似地，为ERROR级别定义一个Appender，只更改文件名 -->
		<appender name="ErrorAppender" type="log4net.Appender.RollingFileAppender">
			<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
			<Encoding value="UTF-8" />
			<file value="Logs\Error\" />
			<appendToFile value="true" />
			<rollingStyle value="Composite" />
			<datePattern value="yyyyMMdd&quot;.log&quot;" />
			<maxSizeRollBackups value="-1" />
			<maximumFileSize value="10MB" />
			<staticLogFileName value="false" />
			<!--只有指定等级的日志事件才被记录-->
			<filter type="log4net.Filter.LevelRangeFilter">
				<levelMin value="ERROR" />
				<levelMax value="ERROR" />
			</filter>
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date  扩展信息:%property 异常:%exception 错误描述:%message%newline" />
			</layout>
		</appender>
	</log4net>
</configuration>