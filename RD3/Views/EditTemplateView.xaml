<UserControl
    x:Class="RD3.Views.EditTemplateView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ex="clr-namespace:LayUI.Wpf.Extensions;assembly=LayUI.Wpf.Extensions"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:RD3.Shared;assembly=RD3.Shared"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:pass="clr-namespace:RD3.Extensions"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:rd3="clr-namespace:RD3"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:viewmodels="clr-namespace:RD3.ViewModels"
    Width="650"
    Height="550"
    d:DataContext="{d:DesignInstance Type=viewmodels:EditProjectTemplateViewModel}"
    rd3:DraggableUserControlAttach.IsDraggable="True"
    mc:Ignorable="d">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <Setter Property="ResizeMode" Value="NoResize" />
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
            <Setter Property="Width" Value="{Binding FormWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="Height" Value="{Binding FormHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="Left" Value="{Binding LeftLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="Top" Value="{Binding TopLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="ShowInTaskbar" Value="False" />
            <Setter Property="AllowsTransparency" Value="True" />
            <Setter Property="WindowStyle" Value="None" />
            <Setter Property="WindowState" Value="{Binding FormState, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="Opacity" Value="1" />
            <Setter Property="Background" Value="Transparent" />
        </Style>
    </prism:Dialog.WindowStyle>
    <Border Style="{StaticResource BorderCard}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                <TextBlock FontSize="{DynamicResource HeadFontSize}" Text="{ex:Language Key='Project ID'}" />
                <TextBlock
                    FontSize="{DynamicResource HeadFontSize}"
                    Foreground="{DynamicResource SecondaryTextBrush}"
                    Text="{Binding Template.Name}" />
            </hc:UniformSpacingPanel>
            <hc:UniformSpacingPanel
                Grid.Row="2"
                Orientation="Vertical"
                Spacing="10">
                <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock FontSize="{DynamicResource SubHeadFontSize}" Text="{ex:Language Key='PH'}" />
                        </hc:UniformSpacingPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <Image
                                Width="25"
                                Height="25"
                                Source="/Images/Link.png" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="Base,Acid" />
                        </StackPanel>
                        <TextBox
                            Grid.Row="2"
                            Width="200"
                            VerticalAlignment="Center"
                            hc:InfoElement.RegexPattern="^(0*\.\d+|[1-9]\d*\.\d+)$ "
                            IsEnabled="{Binding Enable}"
                            Style="{StaticResource TextBoxExtend}"
                            Text="{Binding Template.PH}" />
                    </Grid>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock FontSize="{DynamicResource SubHeadFontSize}" Text="{ex:Language Key='Temp'}" />
                            <TextBlock
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="℃" />
                        </hc:UniformSpacingPanel>
                        <hc:UniformSpacingPanel
                            Grid.Row="1"
                            Orientation="Horizontal"
                            Spacing="10"
                            Visibility="Hidden">
                            <Image
                                Width="25"
                                Height="25"
                                Source="/Images/Link.png" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="{ex:Language Key='Base,Acid'}" />
                        </hc:UniformSpacingPanel>
                        <TextBox
                            Grid.Row="2"
                            Width="200"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding Enable}"
                            Style="{StaticResource TextBoxExtend}"
                            Text="{Binding Template.Temp}" />
                    </Grid>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock FontSize="{DynamicResource SubHeadFontSize}" Text="{ex:Language Key='DO'}" />
                            <TextBlock
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="％" />
                        </hc:UniformSpacingPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <Image
                                Width="25"
                                Height="25"
                                Source="/Images/Link.png" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="Agit,Air,Feed" />
                        </StackPanel>
                        <TextBox
                            Grid.Row="2"
                            Width="200"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding Enable}"
                            Style="{StaticResource TextBoxExtend}"
                            Text="{Binding Template.DO}" />
                    </Grid>
                </hc:UniformSpacingPanel>
                <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock FontSize="{DynamicResource SubHeadFontSize}" Text="{ex:Language Key='Agit'}" />
                            <TextBlock
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="ML/H" />
                        </hc:UniformSpacingPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <Image
                                Width="25"
                                Height="25"
                                Source="/Images/Link.png" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="DO" />
                        </StackPanel>
                        <TextBox
                            Grid.Row="2"
                            Width="200"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding Enable}"
                            Style="{StaticResource TextBoxExtend}"
                            Text="{Binding Template.Agit}" />
                    </Grid>
                </hc:UniformSpacingPanel>
                <Line
                    Grid.Row="3"
                    HorizontalAlignment="Left"
                    Stroke="Gray"
                    StrokeDashArray="2 2"
                    StrokeThickness="2"
                    X1="0"
                    X2="640"
                    Y1="0"
                    Y2="0" />
                <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock FontSize="{DynamicResource SubHeadFontSize}" Text="{ex:Language Key='Base'}" />
                            <TextBlock
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="ML/H" />
                        </hc:UniformSpacingPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <Image
                                Width="25"
                                Height="25"
                                Source="/Images/Link.png" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="PH" />
                        </StackPanel>
                        <TextBox
                            Grid.Row="2"
                            Width="200"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding Enable}"
                            Style="{StaticResource TextBoxExtend}"
                            Text="{Binding Template.Base}" />
                    </Grid>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock FontSize="{DynamicResource SubHeadFontSize}" Text="{ex:Language Key='Acid'}" />
                            <TextBlock
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="ML/H" />
                        </hc:UniformSpacingPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <Image
                                Width="25"
                                Height="25"
                                Source="/Images/Link.png" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="PH" />
                        </StackPanel>
                        <TextBox
                            Grid.Row="2"
                            Width="200"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding Enable}"
                            Style="{StaticResource TextBoxExtend}"
                            Text="{Binding Template.Acid}" />
                    </Grid>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock FontSize="{DynamicResource SubHeadFontSize}" Text="{ex:Language Key='AF'}" />
                            <TextBlock
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="ML/H" />
                        </hc:UniformSpacingPanel>
                        <hc:UniformSpacingPanel
                            Grid.Row="1"
                            Orientation="Horizontal"
                            Spacing="10"
                            Visibility="Hidden">
                            <Image
                                Width="25"
                                Height="25"
                                Source="/Images/Link.png" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="{ex:Language Key='Agit,Air,Feed'}" />
                        </hc:UniformSpacingPanel>
                        <TextBox
                            Grid.Row="2"
                            Width="200"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding Enable}"
                            Style="{StaticResource TextBoxExtend}"
                            Text="{Binding Template.AF}" />
                    </Grid>
                </hc:UniformSpacingPanel>
                <hc:UniformSpacingPanel
                    Orientation="Horizontal"
                    Spacing="10"
                    Visibility="Collapsed">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock FontSize="{DynamicResource SubHeadFontSize}" Text="{ex:Language Key='Feed'}" />
                            <TextBlock
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="ML/H" />
                        </hc:UniformSpacingPanel>
                        <hc:UniformSpacingPanel
                            Grid.Row="1"
                            Orientation="Horizontal"
                            Spacing="10"
                            Visibility="Hidden">
                            <Image
                                Width="25"
                                Height="25"
                                Source="/Images/Link.png" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="{ex:Language Key='DO'}" />
                        </hc:UniformSpacingPanel>
                        <TextBox
                            Grid.Row="2"
                            Width="200"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding Enable}"
                            Style="{StaticResource TextBoxExtend}"
                            Text="{Binding Template.Feed}" />
                    </Grid>
                </hc:UniformSpacingPanel>
                <Line
                    Grid.Row="3"
                    HorizontalAlignment="Left"
                    Stroke="Gray"
                    StrokeDashArray="2 2"
                    StrokeThickness="2"
                    X1="0"
                    X2="640"
                    Y1="0"
                    Y2="0" />
                <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock FontSize="{DynamicResource SubHeadFontSize}" Text="{ex:Language Key='Air'}" />
                            <TextBlock
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="ML/H" />
                        </hc:UniformSpacingPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <Image
                                Width="25"
                                Height="25"
                                Source="/Images/Link.png" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="DO" />
                        </StackPanel>
                        <TextBox
                            Grid.Row="2"
                            Width="200"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding Enable}"
                            Style="{StaticResource TextBoxExtend}"
                            Text="{Binding Template.Air}" />
                    </Grid>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock FontSize="{DynamicResource SubHeadFontSize}" Text="{ex:Language Key='CO2'}" />
                            <TextBlock
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="ML/H" />
                        </hc:UniformSpacingPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <Image
                                Width="25"
                                Height="25"
                                Source="/Images/Link.png" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="DO" />
                        </StackPanel>
                        <TextBox
                            Grid.Row="2"
                            Width="200"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding Enable}"
                            Style="{StaticResource TextBoxExtend}"
                            Text="{Binding Template.CO2}" />
                    </Grid>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock FontSize="{DynamicResource SubHeadFontSize}" Text="{ex:Language Key='O2'}" />
                            <TextBlock
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="ML/H" />
                        </hc:UniformSpacingPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <Image
                                Width="25"
                                Height="25"
                                Source="/Images/Link.png" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="DO" />
                        </StackPanel>
                        <TextBox
                            Grid.Row="2"
                            Width="200"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding Enable}"
                            Style="{StaticResource TextBoxExtend}"
                            Text="{Binding Template.O2}" />
                    </Grid>
                </hc:UniformSpacingPanel>
                <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock FontSize="{DynamicResource SubHeadFontSize}" Text="{ex:Language Key='N2'}" />
                            <TextBlock
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="ML/H" />
                        </hc:UniformSpacingPanel>
                        <hc:UniformSpacingPanel
                            Grid.Row="1"
                            Orientation="Horizontal"
                            Spacing="10"
                            Visibility="Hidden">
                            <Image
                                Width="25"
                                Height="25"
                                Source="/Images/Link.png" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource SubHeadFontSize}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Text="{ex:Language Key='DO'}" />
                        </hc:UniformSpacingPanel>
                        <TextBox
                            Grid.Row="2"
                            Width="200"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding Enable}"
                            Style="{StaticResource TextBoxExtend}"
                            Text="{Binding Template.N2}" />
                    </Grid>
                </hc:UniformSpacingPanel>
                <DockPanel LastChildFill="False">
                    <hc:UniformSpacingPanel
                        DockPanel.Dock="Right"
                        Orientation="Horizontal"
                        Spacing="10">
                        <Button
                            Width="80"
                            Height="30"
                            Margin="5"
                            HorizontalAlignment="Right"
                            HorizontalContentAlignment="Center"
                            hc:BorderElement.CornerRadius="{StaticResource DefaultCornerRadius}"
                            BorderBrush="{StaticResource PrimaryBrush}"
                            Command="{Binding CancelCommand}"
                            Content="{ex:Language Key='Cancel'}"
                            FontSize="{DynamicResource NormalFontSize}"
                            Foreground="{StaticResource PrimaryBrush}" />
                        <Button
                            Width="140"
                            Height="30"
                            Margin="5"
                            HorizontalAlignment="Right"
                            HorizontalContentAlignment="Center"
                            hc:BorderElement.CornerRadius="{StaticResource DefaultCornerRadius}"
                            Background="{StaticResource PrimaryBrush}"
                            BorderBrush="{StaticResource PrimaryBrush}"
                            Command="{Binding OKCommand}"
                            Content="{ex:Language Key='Save as template'}"
                            FontSize="{DynamicResource NormalFontSize}"
                            Foreground="White"
                            Visibility="{Binding Enable, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </hc:UniformSpacingPanel>
                </DockPanel>
            </hc:UniformSpacingPanel>
        </Grid>
    </Border>
</UserControl>