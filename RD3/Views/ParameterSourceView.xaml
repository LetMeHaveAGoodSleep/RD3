<UserControl
    x:Class="RD3.Views.ParameterSourceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ex="clr-namespace:LayUI.Wpf.Extensions;assembly=LayUI.Wpf.Extensions"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:RD3"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:RD3.ViewModels"
    Width="700"
    Height="700"
    d:DataContext="{d:DesignInstance Type=viewmodels:ParameterSourceViewModel}"
    Background="{StaticResource BackGroundBrush}"
    TextElement.FontFamily="{DynamicResource AppFontFamily}"
    TextElement.FontSize="{DynamicResource TextFontSize}"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <Border Background="{StaticResource BackGroundBrush}" CornerRadius="{StaticResource DefaultCornerRadius}">
        <Grid>
            <Grid.RowDefinitions>
                <!--  操作按钮  -->
                <RowDefinition Height="70" />
                <!--  数据表格  -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0">
                <Button
                    Name="Save"
                    Width="80"
                    Height="40"
                    Margin="10"
                    HorizontalAlignment="Right"
                    Command="{Binding SaveCommand}"
                    FontSize="18">
                    保存
                </Button>
            </DockPanel>

            <DataGrid
                Name="dataGrid"
                Grid.Row="1"
                hc:DataGridAttach.CanUnselectAllWithBlankArea="False"
                hc:DataGridAttach.ShowSelectAllButton="False"
                AutoGenerateColumns="False"
                Background="{StaticResource DefaultBrush}"
                CanUserAddRows="True"
                CanUserSortColumns="False"
                ColumnWidth="SizeToHeader"
                GridLinesVisibility="All"
                HeadersVisibility="Column"
                HorizontalGridLinesBrush="LightGray"
                IsReadOnly="False"
                ItemsSource="{Binding Parameters}"
                RowHeaderWidth="100"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectionMode="Single"
                SelectionUnit="Cell"
                VerticalGridLinesBrush="LightGray">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding deviceID}"
                        CanUserSort="False"
                        Header="设备"
                        IsReadOnly="False" />
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding sequenceName}"
                        CanUserSort="False"
                        Header="序列名称"
                        IsReadOnly="False" />
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding useTo}"
                        CanUserSort="False"
                        Header="应用于"
                        IsReadOnly="False" />
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding tsNodecount}"
                        CanUserSort="False"
                        Header="节点数"
                        IsReadOnly="False" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding sequenceParameterName}"
                        CanUserSort="False"
                        Header="序列参数"
                        IsReadOnly="False" />

                    <DataGridTemplateColumn
                        MinWidth="100"
                        CellStyle="{StaticResource DataGridTextCenterCellStyle}"
                        Header="操作"
                        HeaderStyle="{StaticResource DataGridCenterColumnHeaderStyle}">

                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="5">
                                    <Button
                                        Name="btnTimeSequence"
                                        Width="70"
                                        Click="btnTimeSequence_Click"
                                        Content="时间序列" />
                                </hc:UniformSpacingPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>
