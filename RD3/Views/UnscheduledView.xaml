<UserControl
    x:Class="RD3.Views.UnscheduledView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ex="clr-namespace:LayUI.Wpf.Extensions;assembly=LayUI.Wpf.Extensions"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:RD3.Shared;assembly=RD3.Shared"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:pass="clr-namespace:RD3.Extensions"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:rd3="clr-namespace:RD3"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:viewmodels="clr-namespace:RD3.ViewModels"
    Width="650"
    Height="230"
    d:DataContext="{d:DesignInstance Type=viewmodels:UnscheduledViewModel}"
    rd3:DraggableUserControlAttach.IsDraggable="True"
    TextElement.FontFamily="{DynamicResource AppFontFamily}"
    TextElement.FontSize="{DynamicResource TextFontSize}"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <Setter Property="ResizeMode" Value="NoResize" />
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
            <Setter Property="Width" Value="{Binding FormWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="Height" Value="{Binding FormHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="Left" Value="{Binding LeftLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="Top" Value="{Binding TopLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="ShowInTaskbar" Value="False" />
            <Setter Property="AllowsTransparency" Value="True" />
            <Setter Property="WindowStyle" Value="None" />
            <Setter Property="WindowState" Value="{Binding FormState, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Opacity" Value="1" />
        </Style>
    </prism:Dialog.WindowStyle>
    <UserControl.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="8" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <Border Background="White" Style="{StaticResource BorderCommon}">
        <hc:UniformSpacingPanel Orientation="Vertical" Spacing="20">
            <DockPanel LastChildFill="False">
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Left"
                    FontSize="{DynamicResource HeadFontSize}"
                    Text="{Binding SubTitle}" />
                <Button
                    Name="btnClose"
                    Width="26"
                    Height="24"
                    hc:IconElement.Geometry="{StaticResource CloseGeometry}"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding CancelCommand}"
                    DockPanel.Dock="Right" />
            </DockPanel>
            <Border
                Background="White"
                Effect="{StaticResource EffectShadow1}"
                Style="{StaticResource BorderCommon}">
                <WrapPanel Orientation="Horizontal">
                    <CheckBox Name="ChkAll" Content="Select all" />
                    <CheckBox Content="G01" />
                    <CheckBox Content="G02" />
                    <CheckBox Content="G03" />
                    <CheckBox Content="G04" />
                    <CheckBox Content="G05" />
                    <CheckBox Content="G06" />
                    <CheckBox Content="G07" />
                    <CheckBox Content="G08" />
                    <CheckBox Content="G09" />
                    <CheckBox Content="G10" />
                    <CheckBox Content="G11" />
                    <CheckBox Content="G12" />
                    <CheckBox Content="G13" />
                    <CheckBox Content="G14" />
                    <CheckBox Content="G15" />
                    <CheckBox Content="G16" />
                </WrapPanel>
            </Border>
            <DockPanel LastChildFill="False">
                <TextBox
                    Name="TxtVloume"
                    Width="200"
                    Height="50"
                    VerticalAlignment="Center"
                    hc:InfoElement.Title="{ex:Language Key='Volume'}"
                    DockPanel.Dock="Left"
                    Style="{StaticResource TextBoxExtend}"
                    Text="{Binding Volume, ValidatesOnDataErrors=True}" />
                <hc:SimpleStackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button
                        Name="BtnClearAll"
                        Height="30"
                        Margin="0,0,10,0"
                        VerticalAlignment="Bottom"
                        hc:BorderElement.CornerRadius="{StaticResource DefaultCornerRadius}"
                        BorderBrush="{StaticResource PrimaryBrush}"
                        Click="BtnClearAll_Click"
                        Content="{ex:Language Key='Clear all'}"
                        FontSize="{DynamicResource NormalFontSize}"
                        Foreground="{StaticResource PrimaryBrush}" />
                    <Button
                        Height="30"
                        VerticalAlignment="Bottom"
                        hc:BorderElement.CornerRadius="{StaticResource DefaultCornerRadius}"
                        Background="{StaticResource PrimaryBrush}"
                        BorderBrush="{StaticResource PrimaryBrush}"
                        Click="Button_Click"
                        Content="{ex:Language Key='Do as unscheduled action'}"
                        FontSize="{DynamicResource NormalFontSize}"
                        Foreground="White" />
                </hc:SimpleStackPanel>
            </DockPanel>
        </hc:UniformSpacingPanel>
    </Border>
</UserControl>
