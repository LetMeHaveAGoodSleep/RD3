<UserControl
    x:Class="RD3.Views.EditClientView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:RD3.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:RD3.ViewModels"
    Width="250"
    Height="400"
    d:DataContext="{d:DesignInstance Type=viewmodels:EditClientViewModel}"
    Background="{StaticResource BackGroundBrush}"
    mc:Ignorable="d">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBox
            Width="200"
            VerticalAlignment="Center"
            hc:InfoElement.Title="Name"
            Style="{StaticResource TextBoxExtend}"
            Text="{Binding Client.Name}" />
        <TextBox
            Grid.Row="1"
            Width="200"
            VerticalAlignment="Center"
            hc:InfoElement.Title="Host"
            Style="{StaticResource TextBoxExtend}"
            Text="{Binding Client.Host}" />
        <TextBox
            Grid.Row="2"
            Width="200"
            VerticalAlignment="Center"
            hc:InfoElement.Title="Port"
            Style="{StaticResource TextBoxExtend}"
            Text="{Binding Client.Port}" />
        <TextBox
            Grid.Row="3"
            Width="200"
            VerticalAlignment="Center"
            hc:InfoElement.Title="ReconnectDelay"
            Style="{StaticResource TextBoxExtend}"
            Text="{Binding Client.ReconnectDelay}" />
        <TextBox
            Grid.Row="4"
            Width="200"
            VerticalAlignment="Center"
            hc:InfoElement.Title="RetryTimes"
            Style="{StaticResource TextBoxExtend}"
            Text="{Binding Client.RetryTimes}" />
        <StackPanel
            Grid.Row="6"
            Grid.ColumnSpan="2"
            FlowDirection="RightToLeft"
            Orientation="Horizontal">
            <Button
                Width="80"
                Height="30"
                Margin="5"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Center"
                hc:BorderElement.CornerRadius="{StaticResource DefaultCornerRadius}"
                BorderBrush="{StaticResource ButtonBoderBrush}"
                Command="{Binding CancelCommand}"
                Content="Cancel"
                FontSize="14"
                Foreground="{StaticResource ButtonBoderBrush}" />
            <Button
                Width="80"
                Height="30"
                Margin="5"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Center"
                hc:BorderElement.CornerRadius="{StaticResource DefaultCornerRadius}"
                Background="{StaticResource ButtonBoderBrush}"
                BorderBrush="{StaticResource ButtonBoderBrush}"
                Command="{Binding OKCommand}"
                Content="OK"
                FontSize="14"
                Foreground="White" />
        </StackPanel>
    </Grid>
</UserControl>
