<UserControl
    x:Class="RD3.Views.NewBatchView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ex="clr-namespace:LayUI.Wpf.Extensions;assembly=LayUI.Wpf.Extensions"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:RD3"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:RD3.ViewModels"
    Width="1200"
    Height="600"
    d:DataContext="{d:DesignInstance Type=viewmodels:NewBatchViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="1200"
    Background="{StaticResource BackGroundBrush}"
    TextElement.FontFamily="{DynamicResource AppFontFamily}"
    TextElement.FontSize="{DynamicResource TextFontSize}"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <UserControl.Resources>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <hc:UniformSpacingPanel
            Grid.Row="0"
            Orientation="Vertical"
            Spacing="10">
            <DockPanel LastChildFill="False">
                <hc:SearchBar
                    Name="TxtSearch"
                    Width="240"
                    Height="45"
                    HorizontalAlignment="Left"
                    hc:InfoElement.ShowClearButton="True"
                    DockPanel.Dock="Left"
                    IsRealTime="True"
                    SearchStarted="TxtSearch_SearchStarted" />
                <hc:UniformSpacingPanel DockPanel.Dock="Right" Spacing="10">
                    <Button
                        Name="ButtonCompare"
                        Height="35"
                        HorizontalContentAlignment="Center"
                        d:IsHidden="True"
                        hc:BorderElement.CornerRadius="{StaticResource DefaultCornerRadius}"
                        hc:IconElement.Geometry="{StaticResource GeometryCompare}"
                        Content="{ex:Language Key='Compare'}"
                        FontSize="{DynamicResource NormalFontSize}" />
                    <Button
                        Height="35"
                        HorizontalContentAlignment="Center"
                        d:IsHidden="True"
                        hc:BorderElement.CornerRadius="{StaticResource DefaultCornerRadius}"
                        hc:IconElement.Geometry="{StaticResource GeometryExport}"
                        Click="ButtonExport_Click"
                        Content="{ex:Language Key='Export'}"
                        FontSize="{DynamicResource NormalFontSize}" />
                    <Button
                        Height="35"
                        HorizontalContentAlignment="Center"
                        hc:BorderElement.CornerRadius="{StaticResource DefaultCornerRadius}"
                        hc:IconElement.Geometry="{StaticResource GeometryDelete}"
                        Command="{Binding DeleteCommand}"
                        CommandParameter="{Binding ElementName=dataGrid, Path=SelectedItem}"
                        FontSize="{DynamicResource NormalFontSize}"
                        Foreground="Red"
                        Visibility="Collapsed" />
                </hc:UniformSpacingPanel>
            </DockPanel>
        </hc:UniformSpacingPanel>
        <DataGrid
            Name="dataGrid1"
            Grid.Row="1"
            hc:DataGridAttach.CanUnselectAllWithBlankArea="True"
            hc:DataGridAttach.ShowSelectAllButton="False"
            AutoGenerateColumns="False"
            Background="Transparent"
            CanUserSortColumns="False"
            ColumnWidth="SizeToCells"
            FontSize="{DynamicResource NormalFontSize}"
            HeadersVisibility="Column"
            IsReadOnly="True"
            ItemsSource="{Binding RD3Batch}"
            MouseDoubleClick="DataGrid_MouseDoubleClick"
            MouseRightButtonDown="DataGrid_MouseRightButtonDown"
            RowHeaderWidth="60"
            ScrollViewer.HorizontalScrollBarVisibility="Visible"
            ScrollViewer.VerticalScrollBarVisibility="Visible">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding idRemark}"
                    CellStyle="{StaticResource DataGridTextCenterCellStyle}"
                    Header="ID"
                    HeaderStyle="{StaticResource DataGridCenterColumnHeaderStyle}" />
                <DataGridTextColumn
                    Width="180"
                    Binding="{Binding createTime}"
                    CellStyle="{StaticResource DataGridTextCenterCellStyle}"
                    Header="创建时间"
                    HeaderStyle="{StaticResource DataGridCenterColumnHeaderStyle}" />
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding devieceID}"
                    CellStyle="{StaticResource DataGridTextCenterCellStyle}"
                    Header="反应器"
                    HeaderStyle="{StaticResource DataGridCenterColumnHeaderStyle}" />
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding createUser}"
                    CellStyle="{StaticResource DataGridTextCenterCellStyle}"
                    Header="创建者"
                    HeaderStyle="{StaticResource DataGridCenterColumnHeaderStyle}" />

                <DataGridTextColumn
                    Width="60"
                    Binding="{Binding statue}"
                    CellStyle="{StaticResource DataGridTextCenterCellStyle}"
                    Header="状态"
                    HeaderStyle="{StaticResource DataGridCenterColumnHeaderStyle}" />
                <DataGridTextColumn
                    Width="220"
                    Binding="{Binding description}"
                    CellStyle="{StaticResource DataGridTextCenterCellStyle}"
                    Header="说明"
                    HeaderStyle="{StaticResource DataGridCenterColumnHeaderStyle}" />
                <DataGridTemplateColumn
                    Width="200"
                    CellStyle="{StaticResource DataGridTextCenterCellStyle}"
                    Header="操作"
                    HeaderStyle="{StaticResource DataGridCenterColumnHeaderStyle}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="5">
                                <Button
                                    HorizontalAlignment="Left"
                                    hc:IconElement.Geometry="{StaticResource GeometryUseTemplate}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="ButtonUseTemplate_Click"
                                    ToolTip="{ex:Language Key='Use Template'}" />
                                <Button
                                    HorizontalAlignment="Left"
                                    hc:IconElement.Geometry="{StaticResource GeometryEdit}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="ButtonEdit_Click"
                                    ToolTip="{ex:Language Key='Edit'}" />
                                <Button
                                    HorizontalAlignment="Left"
                                    hc:IconElement.Geometry="{StaticResource GeometryLookDetail}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="ButtonView_Click"
                                    ToolTip="{ex:Language Key='View'}" />
                                <Button
                                    HorizontalAlignment="Left"
                                    hc:IconElement.Geometry="{StaticResource GeometryDelete}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="ButtonDelete_Click"
                                    Foreground="Red"
                                    ToolTip="{ex:Language Key='Delete'}" />
                            </hc:UniformSpacingPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <hc:Pagination
            Name="pagination"
            Grid.Row="2"
            Margin="0,0,0,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Background="Transparent"
            DataCountPerPage="{Binding DataCountPerPage}"
            IsJumpEnabled="True"
            MaxPageCount="{Binding PageCount}"
            MaxPageInterval="4"
            PageIndex="{Binding PageIndex}">
            <hc:Interaction.Triggers>
                <hc:EventTrigger EventName="PageUpdated">
                    <hc:EventToCommand Command="{Binding PageUpdatedCommand}" PassEventArgsToCommand="True" />
                </hc:EventTrigger>
            </hc:Interaction.Triggers>
        </hc:Pagination>
    </Grid>
</UserControl>
