<UserControl
    x:Class="RD3.Views.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="clr-namespace:RD3.Behaviors"
    xmlns:common="clr-namespace:RD3.Common"
    xmlns:cv="clr-namespace:RD3.Common.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ex="clr-namespace:LayUI.Wpf.Extensions;assembly=LayUI.Wpf.Extensions"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:RD3.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:share="clr-namespace:RD3.Shared;assembly=RD3.Shared"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:vm="clr-namespace:RD3.ViewModels"
    xmlns:wpf="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    Width="1000"
    Height="500"
    d:DataContext="{d:DesignInstance Type=vm:ReactorViewModel}"
    Background="{StaticResource BackGroundBrush}"
    TextElement.FontFamily="{DynamicResource AppFontFamily}"
    TextElement.FontSize="{DynamicResource TextFontSize}"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <Setter Property="ResizeMode" Value="CanResize" />
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterOwner" />
            <Setter Property="Width" Value="{Binding FormWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="Height" Value="{Binding FormHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="Left" Value="{Binding LeftLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="Top" Value="{Binding TopLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="ShowInTaskbar" Value="True" />
            <Setter Property="AllowsTransparency" Value="False" />
            <Setter Property="WindowStyle" Value="SingleBorderWindow" />
            <Setter Property="WindowState" Value="{Binding FormState, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="Background" Value="{StaticResource BackGroundBrush}" />
            <Setter Property="Opacity" Value="1" />
            <Setter Property="Icon" Value="../Assets/logo.png" />
        </Style>
    </prism:Dialog.WindowStyle>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel HorizontalAlignment="Left" LastChildFill="False">
            <Border
                Height="45"
                Background="{DynamicResource BorderBrush}"
                BorderThickness="0.5"
                CornerRadius="8">
                <hc:ButtonGroup
                    Name="ButtonGroup"
                    VerticalAlignment="Center"
                    Style="{StaticResource ButtonGroupSolid}">
                    <RadioButton
                        Width="100"
                        Height="35"
                        Margin="5,0,0,0"
                        hc:BorderElement.CornerRadius="8"
                        Background="{DynamicResource BorderBrush}"
                        Content="{ex:Language Key='General'}"
                        FontSize="{DynamicResource MediumFontSize}"
                        Foreground="{DynamicResource SecondaryTextBrush}"
                        IsChecked="True"
                        Tag="tabGeneral" />
                    <RadioButton
                        Width="100"
                        Height="35"
                        Margin="5,0,5,0"
                        hc:BorderElement.CornerRadius="8"
                        Background="{DynamicResource BorderBrush}"
                        Content="{ex:Language Key='Other'}"
                        FontSize="{DynamicResource SubHeadFontSize}"
                        Foreground="{DynamicResource SecondaryTextBrush}"
                        Tag="tabAlarm" />
                </hc:ButtonGroup>
            </Border>
        </DockPanel>
        <TabControl
            Name="TabControl"
            Grid.Row="2"
            BorderThickness="0"
            Loaded="TabControl_Loaded">
            <TabItem Name="tabGeneral" Header="General">
                <Border Background="#F5F7FA" Style="{StaticResource BorderCard}">
                    <hc:UniformSpacingPanel Orientation="Vertical" Spacing="20">
                        <hc:UniformSpacingPanel Orientation="Vertical" Spacing="5">
                            <TextBlock FontSize="{DynamicResource SubHeadFontSize}" Text="{ex:Language Key='Instruction manual'}" />
                            <TextBlock
                                FontSize="10"
                                FontStyle="Oblique"
                                Foreground="gray"
                                Text="{ex:Language Key='Browse the product manual online'}" />
                        </hc:UniformSpacingPanel>
                        <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                            <Border
                                Width="250"
                                Height="150"
                                Padding="8"
                                Background="White"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="8"
                                Effect="{StaticResource EffectShadow1}">
                                <Grid>
                                    <Image Source="/images/login.png" Stretch="UniformToFill" />
                                    <Button
                                        Width="100"
                                        Height="100"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="PlayPauseButton_Click"
                                        Content="▶"
                                        FontSize="40"
                                        Foreground="White"
                                        Tag="\Instruction\video.mp4" />
                                </Grid>
                            </Border>
                            <Border
                                Width="250"
                                Height="150"
                                Padding="8"
                                Background="White"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="8"
                                Effect="{StaticResource EffectShadow1}">
                                <Grid>
                                    <Image Source="/images/login.png" Stretch="UniformToFill" />
                                    <Button
                                        Width="100"
                                        Height="100"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="PlayPauseButton_Click"
                                        Content="▶"
                                        FontSize="40"
                                        Foreground="White"
                                        Tag="\Instruction\video.mp4" />
                                </Grid>
                            </Border>
                            <Border
                                Width="250"
                                Height="150"
                                Padding="8"
                                Background="White"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="8"
                                Effect="{StaticResource EffectShadow1}">
                                <Grid>
                                    <Image Source="/images/login.png" Stretch="UniformToFill" />
                                    <Button
                                        Width="100"
                                        Height="100"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="PlayPauseButton_Click"
                                        Content="▶"
                                        FontSize="40"
                                        Foreground="White"
                                        Tag="\Instruction\video.mp4" />
                                </Grid>
                            </Border>
                        </hc:UniformSpacingPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="20" />
                            </Grid.RowDefinitions>
                            <hc:UniformSpacingPanel Orientation="Vertical" Spacing="5">
                                <TextBlock FontSize="{DynamicResource SubHeadFontSize}" Text="{ex:Language Key='Instrument mode'}" />
                                <TextBlock
                                    FontSize="10"
                                    FontStyle="Oblique"
                                    Foreground="gray"
                                    Text="{ex:Language Key='Turn on simulation mode.'}" />
                            </hc:UniformSpacingPanel>
                            <ToggleButton
                                Grid.Column="1"
                                Width="150"
                                HorizontalAlignment="Center"
                                BorderThickness="0"
                                IsChecked="{Binding IsSimulation}"
                                Style="{StaticResource ToggleButtonSwitch}" />
                            <hc:UniformSpacingPanel
                                Grid.Row="2"
                                Orientation="Vertical"
                                Spacing="5">
                                <TextBlock FontSize="{DynamicResource SubHeadFontSize}" Text="{ex:Language Key='Log Switch'}" />
                                <TextBlock
                                    Grid.Row="2"
                                    FontSize="10"
                                    FontStyle="Oblique"
                                    Foreground="gray"
                                    Text="{ex:Language Key='Turn on Log.'}" />
                            </hc:UniformSpacingPanel>
                            <ToggleButton
                                Grid.Row="2"
                                Grid.Column="1"
                                Width="150"
                                HorizontalAlignment="Center"
                                BorderThickness="0"
                                IsChecked="{Binding LogOpen}"
                                Style="{StaticResource ToggleButtonSwitch}" />
                            <hc:UniformSpacingPanel
                                Grid.Row="4"
                                Orientation="Vertical"
                                Spacing="5">
                                <TextBlock FontSize="{DynamicResource SubHeadFontSize}" Text="{ex:Language Key='Time Interval'}" />
                                <TextBlock
                                    FontSize="10"
                                    FontStyle="Oblique"
                                    Foreground="gray"
                                    Text="{ex:Language Key='Read real-time data  unit:sencond.'}" />
                            </hc:UniformSpacingPanel>
                            <ComboBox
                                Grid.Row="4"
                                Grid.Column="1"
                                Width="150"
                                ItemsSource="{Binding IntervalSource}"
                                SelectedItem="{Binding TimeInterval}"
                                Style="{StaticResource ComboBoxExtend}" />
                            <hc:UniformSpacingPanel
                                Grid.Row="6"
                                Orientation="Vertical"
                                Spacing="5">
                                <TextBlock FontSize="{DynamicResource SubHeadFontSize}" Text="{ex:Language Key='FontFamily'}" />
                                <TextBlock
                                    FontSize="10"
                                    FontStyle="Oblique"
                                    Foreground="gray"
                                    Text="{ex:Language Key='Choose FontFamily.'}" />
                            </hc:UniformSpacingPanel>
                            <ComboBox
                                Grid.Row="6"
                                Grid.Column="1"
                                Width="150"
                                ItemsSource="{Binding FontSource}"
                                SelectedItem="{Binding FontFamily}"
                                Style="{StaticResource ComboBoxExtend}" />
                        </Grid>
                    </hc:UniformSpacingPanel>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
