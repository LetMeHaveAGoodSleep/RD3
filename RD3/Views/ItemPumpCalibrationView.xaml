<UserControl
    x:Class="RD3.Views.ItemPumpCalibrationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ex="clr-namespace:LayUI.Wpf.Extensions;assembly=LayUI.Wpf.Extensions"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:RD3.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:RD3.ViewModels"
    Width="auto"
    Height="auto"
    d:DataContext="{d:DesignInstance Type=vm:ItemPumpCalibrationViewModel}"
    mc:Ignorable="d">
    <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
        <DockPanel>
            <ComboBox
                Name="PumpName1"
                Width="80"
                VerticalAlignment="Bottom"
                HorizontalContentAlignment="Center"
                Background="{DynamicResource DefaultBrush}"
                BorderBrush="{DynamicResource PrimaryBrush}"
                DockPanel.Dock="Bottom"
                Foreground="{DynamicResource PrimaryBrush}"
                SelectedIndex="{Binding Index}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction
                            Command="{Binding ChangePumpCommand}"
                            CommandParameter="{Binding ElementName=PumpName1, Path=SelectedIndex}"
                            PassEventArgsToCommand="True" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>
        </DockPanel>
        <DockPanel>
            <Label
                Width="80"
                VerticalAlignment="Bottom"
                HorizontalContentAlignment="Center"
                Background="{DynamicResource DefaultBrush}"
                BorderBrush="{DynamicResource PrimaryBrush}"
                Content="{Binding PumpName}"
                DockPanel.Dock="Bottom"
                Foreground="{DynamicResource PrimaryBrush}" />
        </DockPanel>
        <!--  modif by hdb  -->
        <!--<DockPanel>
            <TextBlock DockPanel.Dock="Top" Text="当前流量" />
            <Label
                Width="100"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                hc:InfoElement.Title="{ex:Language Key='Current Value'}"
                BorderBrush="{DynamicResource PrimaryBrush}"
                Content="{Binding CurrentValue}"
                IsEnabled="False" />
        </DockPanel>-->
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" Text="速度(mL/h)" />
            <TextBox
                Width="80"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                hc:InfoElement.Title="{ex:Language Key='Pump Speed'}"
                BorderBrush="{DynamicResource PrimaryBrush}"
                Text="{Binding Speed, UpdateSourceTrigger=PropertyChanged}" />
        </DockPanel>
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" Text="持续时间（min）" />
            <TextBox
                Width="80"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                BorderBrush="{DynamicResource PrimaryBrush}"
                Text="{Binding Time, UpdateSourceTrigger=PropertyChanged}" />
        </DockPanel>
        <DockPanel>
            <!--  add by hdb  -->
            <TextBlock DockPanel.Dock="Top" Text="体积(mL)" />
            <Label
                Width="80"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                hc:InfoElement.Title="{ex:Language Key='Current Value'}"
                BorderBrush="{DynamicResource PrimaryBrush}"
                Content="{Binding TheoreticalVolume, UpdateSourceTrigger=PropertyChanged}"
                IsEnabled="False" />
        </DockPanel>
        <DockPanel>
            <Button
                Width="80"
                VerticalAlignment="Bottom"
                hc:BorderElement.CornerRadius="{StaticResource DefaultCornerRadius}"
                BorderBrush="{StaticResource PrimaryBrush}"
                Command="{Binding CalibrateCommand}"
                CommandParameter="1"
                Content="{ex:Language Key='Start'}"
                FontSize="{DynamicResource NormalFontSize}"
                Foreground="{StaticResource PrimaryBrush}" />
        </DockPanel>
        <DockPanel>
            <!--  add by hdb  -->
            <TextBlock DockPanel.Dock="Top" Text="称重(g)" />
            <TextBox
                Width="80"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                BorderBrush="{DynamicResource PrimaryBrush}"
                Text="{Binding Weigh, UpdateSourceTrigger=PropertyChanged}" />
        </DockPanel>
        <DockPanel>
            <!--  add by hdb  -->
            <TextBlock DockPanel.Dock="Top" Text="密度(g/mL)" />
            <TextBox
                Width="80"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                BorderBrush="{DynamicResource PrimaryBrush}"
                Text="{Binding Density, UpdateSourceTrigger=PropertyChanged}" />
        </DockPanel>
        <DockPanel>
            <!--  add by hdb  -->
            <TextBlock DockPanel.Dock="Top" Text="实测体积(mL)" />
            <TextBox
                Width="80"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                BorderBrush="{DynamicResource PrimaryBrush}"
                IsEnabled="False"
                Text="{Binding RealVolume, UpdateSourceTrigger=PropertyChanged}" />
        </DockPanel>
        <DockPanel>
            <Button
                Width="80"
                VerticalAlignment="Bottom"
                hc:BorderElement.CornerRadius="{StaticResource DefaultCornerRadius}"
                BorderBrush="{StaticResource PrimaryBrush}"
                Command="{Binding CalibrateCommand}"
                CommandParameter="3"
                Content="{ex:Language Key='Write'}"
                FontSize="{DynamicResource NormalFontSize}"
                Foreground="{StaticResource PrimaryBrush}" />
        </DockPanel>
        <DockPanel>
            <Button
                Width="80"
                VerticalAlignment="Bottom"
                hc:BorderElement.CornerRadius="{StaticResource DefaultCornerRadius}"
                BorderBrush="{StaticResource PrimaryBrush}"
                Command="{Binding CalibrateCommand}"
                CommandParameter="255"
                Content="{ex:Language Key='Finish'}"
                FontSize="{DynamicResource NormalFontSize}"
                Foreground="{StaticResource PrimaryBrush}" />
        </DockPanel>
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" Text="系数" />
            <TextBox
                Width="80"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                BorderBrush="{DynamicResource PrimaryBrush}"
                Text="{Binding Coefficient, UpdateSourceTrigger=PropertyChanged}" />
        </DockPanel>
        <DockPanel>
            <Button
                Width="80"
                VerticalAlignment="Bottom"
                hc:BorderElement.CornerRadius="{StaticResource DefaultCornerRadius}"
                BorderBrush="{StaticResource PrimaryBrush}"
                Command="{Binding CalibrateCommand}"
                CommandParameter="0"
                Content="{ex:Language Key='写入校准'}"
                FontSize="{DynamicResource NormalFontSize}"
                Foreground="{StaticResource PrimaryBrush}" />
        </DockPanel>
        <!--  modify by hdb  -->
        <!--<DockPanel>
            <Button
                Width="150"
                VerticalAlignment="Bottom"
                hc:BorderElement.CornerRadius="{StaticResource DefaultCornerRadius}"
                BorderBrush="{StaticResource PrimaryBrush}"
                Command="{Binding ResetCommand}"
                Content="{ex:Language Key='Reset Flow Rate'}"
                FontSize="{DynamicResource NormalFontSize}"
                Foreground="{StaticResource PrimaryBrush}" />
        </DockPanel>-->
    </hc:UniformSpacingPanel>
</UserControl>
