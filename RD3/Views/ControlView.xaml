    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:RD3.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:RD3.ViewModels"
    xmlns:wpf="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    d:DataContext="{d:DesignInstance Type=viewmodels:AlarmViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource BackGroundBrush}"
    FontFamily="{StaticResource ENGFontFamily}"
    TextElement.FontSize="12"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <TabControl Style="{StaticResource TabControlBaseStyle}">
        <TabItem Header="{ex:Language Key='Time series'}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <hc:StepBar Grid.ColumnSpan="3" StepIndex="0">
                    <hc:StepBarItem Content="{ex:Language Key='Devices'}" />
                    <hc:StepBarItem Content="{ex:Language Key='Time series'}" />
                    <hc:StepBarItem Content="{ex:Language Key='Step Trend'}" />
                </hc:StepBar>
                <hc:UniformSpacingPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10"
                    Orientation="Vertical"
                    Spacing="10">
                    <hc:ComboBox
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        hc:BorderElement.CornerRadius="8"
                        hc:InfoElement.Placeholder="{ex:Language Key='Select Batch'}"
                        ItemsSource="{Binding}"
                        SelectedItem="{Binding Batch}" />
                    <DataGrid
                        Name="dataGrid"
                        hc:DataGridAttach.CanUnselectAllWithBlankArea="True"
                        hc:DataGridAttach.ShowSelectAllButton="True"
                        AutoGenerateColumns="False"
                        Background="Transparent"
                        ColumnWidth="SizeToCells"
                        FontSize="14"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        ItemsSource="{Binding UserCol}"
                        RowHeaderWidth="60"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="70"
                                Binding="{Binding UserName}"
                                CellStyle="{StaticResource DataGridTextCenterCellStyle}"
                                Header="{ex:Language Key='Device'}"
                                HeaderStyle="{StaticResource DataGridCenterColumnHeaderStyle}" />
                            <DataGridTextColumn
                                Width="70"
                                Binding="{Binding UserName}"
                                CellStyle="{StaticResource DataGridTextCenterCellStyle}"
                                Header="{ex:Language Key='Status'}"
                                HeaderStyle="{StaticResource DataGridCenterColumnHeaderStyle}" />
                            <DataGridTextColumn
                                Width="100"
                                Binding="{Binding UserName}"
                                CellStyle="{StaticResource DataGridTextCenterCellStyle}"
                                Header="{ex:Language Key='Batch'}"
                                HeaderStyle="{StaticResource DataGridCenterColumnHeaderStyle}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </hc:UniformSpacingPanel>
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Effect="{StaticResource EffectShadow1}">
                    <hc:UniformSpacingPanel
                        Margin="10"
                        Orientation="Vertical"
                        Spacing="10">
                        <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="5">
                            <hc:ComboBox
                                Width="110"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                hc:BorderElement.CornerRadius="8"
                                hc:InfoElement.Placeholder="{ex:Language Key='Time(s)'}"
                                hc:InfoElement.Title="{ex:Language Key='No.'}"
                                hc:InfoElement.TitlePlacement="Left"
                                Foreground="Gray"
                                ItemsSource="{Binding}"
                                SelectedItem="{Binding Batch}" />
                            <hc:ComboBox
                                Width="80"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                hc:BorderElement.CornerRadius="8"
                                hc:InfoElement.Placeholder="{ex:Language Key='Item1'}"
                                ItemsSource="{Binding}"
                                SelectedItem="{Binding Batch}" />
                            <hc:ComboBox
                                Width="80"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                hc:BorderElement.CornerRadius="8"
