                    </hc:UniformSpacingPanel>
                </Border>
                <hc:UniformSpacingPanel
                    Grid.Row="1"
                    Grid.Column="2"
                    Orientation="Vertical"
                    Spacing="10">
                    <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                        <Button
                            Height="30"
                            HorizontalAlignment="Left"
                            hc:BorderElement.CornerRadius="8"
                            hc:IconElement.Geometry="{StaticResource GeometryStart}"
                            Background="Transparent"
                            BorderThickness="1"
                            Command="{Binding PauseCommand}"
                            Content="{ex:Language Key='Start'}"
                            ToolTip="Start" />
                        <Button
                            Height="30"
                            HorizontalAlignment="Left"
                            hc:BorderElement.CornerRadius="8"
                            hc:IconElement.Geometry="{StaticResource GeometryPause}"
                            Background="Transparent"
                            BorderThickness="1"
                            Command="{Binding PauseCommand}"
                            Content="{ex:Language Key='Pause'}"
                            ToolTip="Pause" />
                        <Button
                            Height="30"
                            HorizontalAlignment="Left"
                            hc:BorderElement.CornerRadius="8"
                            hc:IconElement.Geometry="{StaticResource GeometryLoop}"
                            Background="Transparent"
                            BorderThickness="1"
                            Command="{Binding PauseCommand}"
                            Content="{ex:Language Key='Pause'}"
                            ToolTip="Loop" />
                        <Button
                            Height="30"
                            HorizontalAlignment="Left"
                            hc:BorderElement.CornerRadius="8"
                            hc:IconElement.Geometry="{StaticResource GeometryImport}"
                            Background="Transparent"
                            BorderThickness="1"
                            Command="{Binding PauseCommand}"
                            Content="{ex:Language Key='Import'}"
                            ToolTip="Import" />
                        <Button
                            Height="30"
                            HorizontalAlignment="Left"
                            hc:BorderElement.CornerRadius="8"
                            hc:IconElement.Geometry="{StaticResource GeometrySave}"
                            Background="Transparent"
                            BorderThickness="1"
                            Command="{Binding PauseCommand}"
                            Content="{ex:Language Key='Import'}"
                            ToolTip="Save" />
