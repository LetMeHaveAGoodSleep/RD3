<Window
    x:Class="RD3.Views.NewMainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Selector="clr-namespace:RD3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ex="clr-namespace:LayUI.Wpf.Extensions;assembly=LayUI.Wpf.Extensions"
    xmlns:ext="clr-namespace:RD3.Extensions"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:RD3"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:RD3.ViewModels"
    xmlns:wpf="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    Title="{ex:Language Key='MainWindow'}"
    MinWidth="1600"
    MinHeight="900"
    d:DataContext="{d:DesignInstance Type=viewmodels:NewMainViewModel}"
    d:DesignHeight="900"
    d:DesignWidth="1600"
    prism:ViewModelLocator.AutoWireViewModel="True"
    AllowsTransparency="True"
    Background="Transparent"
    TextElement.FontFamily="{DynamicResource AppFontFamily}"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border Background="{StaticResource BackGroundBrush}" CornerRadius="{StaticResource DefaultCornerRadius}">
        <materialDesign:DialogHost
            x:Name="DialogHost"
            DialogTheme="Inherit"
            Identifier="Root">
            <Grid Name="MainGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Name="Title" Height="40" />
                    <!--  标题栏  -->
                    <RowDefinition Name="Menu" Height="40" />
                    <!--  菜单栏  -->
                    <RowDefinition Name="Content" Height="*" />
                    <!--  内容区  -->
                </Grid.RowDefinitions>
                <Grid
                    Name="TitleGrid"
                    Grid.Row="0"
                    Background="{DynamicResource PrimaryBrush}">
                    <!--  标题栏  -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <!--  log  -->
                        <ColumnDefinition Width="*" />
                        <!--  标题  -->
                        <ColumnDefinition Width="260" />
                        <!--  用户  -->
                        <ColumnDefinition Width="100" />
                        <!--  最大最小  -->
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Image
                            Width="24"
                            Height="24"
                            Margin="5"
                            Source="/Assets/logo.png" />
                        <TextBlock
                            Margin="8,10,10,8"
                            FontSize="{StaticResource HeadFontSize}"
                            FontWeight="Bold"
                            Text="芯造科技"
                            TextAlignment="Left"
                            TextWrapping="Wrap" />
                    </StackPanel>

                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <Button
                            Name="btnMin"
                            hc:IconElement.Geometry="{StaticResource WindowMinGeometry}"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            ToolTip="{ex:Language Key='Minimize'}" />
                        <Button
                            Name="btnMax"
                            Background="Transparent"
                            BorderThickness="0">
                            <materialDesign:PackIcon
                                Name="PackIconWindowState"
                                Foreground="White"
                                Kind="WindowMaximize"
                                ToolTip="{ex:Language Key='Maximize'}" />
                        </Button>
                        <Button
                            Name="btnClose"
                            hc:IconElement.Geometry="{StaticResource CloseGeometry}"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            ToolTip="{ex:Language Key='Close'}" />
                    </StackPanel>
                </Grid>
                <Grid
                    Name="MenuGrid"
                    Grid.Row="1"
                    Background="{DynamicResource PrimaryBrush}">
                    <!--  菜单栏  -->
                    <Menu Height="40" VerticalAlignment="Top">
                        <MenuItem Height="40" Header="系统管理">
                            <MenuItem
                                Width="100"
                                Click="MenuItem_Open_Click"
                                Header="用户"
                                Tag="UserView" />
                            <MenuItem
                                Width="100"
                                Click="MenuItem_Open_Click"
                                Header="设置"
                                Tag="SettingView" />
                            <!--<MenuItem Header="项目" Width = "100" />
                            <MenuItem Header="版本" Width = "100" />-->
                        </MenuItem>
                        <MenuItem Height="40" Header="设备管理">
                            <MenuItem
                                Width="100"
                                Click="MenuItem_Open_Click"
                                Header="设备校准"
                                Tag="CalibrationView" />
                            <MenuItem
                                Width="100"
                                Click="MenuItem_Open_Click"
                                Header="设备配置"
                                Tag="PumpMFCView"
                                Visibility="Collapsed" />
                            <MenuItem
                                Width="100"
                                Command="{Binding ReactorCommand}"
                                Header="设备详情" />
                            <MenuItem
                                Width="100"
                                Click="MenuItem_Open_Click"
                                Header="工程调试"
                                Tag="MCUDebugView"
                                Visibility="{Binding}" />
                        </MenuItem>
                        <MenuItem Height="40" Header="参数管理">
                            <!--<MenuItem Header="复制"/>
                            <MenuItem Header="粘贴"/>-->
                        </MenuItem>
                        <MenuItem Height="40" Header="数据管理">
                            <MenuItem
                                Width="100"
                                Click="MenuItem_Open_Click"
                                Header="实验管理"
                                Tag="NewProjectView" />
                            <MenuItem
                                Width="100"
                                Click="MenuItem_Open_Click"
                                Header="批次管理"
                                Tag="NewBatchView" />
                        </MenuItem>
                        <MenuItem
                            Height="40"
                            Command="{Binding ReactorCommand}"
                            Header="设备详情" />
                        <MenuItem
                            Height="40"
                            Command="{Binding CameraCommand}"
                            Header="视频监测" />
                    </Menu>
                </Grid>
                <Grid Name="ContentGrid" Grid.Row="2">
                    <!--  内容区  -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="280" />
                        <!--  左侧设备预览  -->
                        <ColumnDefinition Width="*" />
                        <!--  右侧图表+Log日志显示区  -->
                    </Grid.ColumnDefinitions>
                    <Grid Name="DevieceGrid" Grid.Column="0">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="500" />
                            <!--  设备列表  -->
                            <RowDefinition Height="*" />
                            <!--  设备详情  -->
                        </Grid.RowDefinitions>

                        <DataGrid
                            x:Name="devieceGrid"
                            Grid.Row="0"
                            AutoGenerateColumns="False"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            ItemsSource="{Binding ReactorCol}"
                            MouseRightButtonDown="devieceGrid_MouseRightButtonDown"
                            SelectedIndex="{Binding SelectedIndex}"
                            SelectionChanged="DataGrid_SelectionChanged">

                            <DataGrid.Columns>
                                <!--  设备列表  -->
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding Name}"
                                    CanUserSort="False"
                                    Header="反应器"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding statue}"
                                    CanUserSort="False"
                                    Header="运行状态"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding ConnectStatus}"
                                    CanUserSort="False"
                                    Header="连接状态"
                                    IsReadOnly="True" />
                            </DataGrid.Columns>

                        </DataGrid>

                        <DataGrid
                            Name="DevieceDetial"
                            Grid.Row="1"
                            AutoGenerateColumns="False"
                            Background="{x:Null}"
                            ItemsSource="{Binding DevieceInfo}"
                            RowHeight="30">
                            <!--  设备详情  -->
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding DescriptionName}"
                                    CanUserSort="False"
                                    Header="名称"
                                    IsReadOnly="True" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding DescriptionValue}"
                                    CanUserSort="False"
                                    Header="R01"
                                    IsReadOnly="True" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <Grid Name="ChartAndLogGrid" Grid.Column="1">
                        <!--  图表和日志  -->

                        <Grid.RowDefinitions>
                            <RowDefinition Height="660" />
                            <!--  图表  -->
                            <RowDefinition Height="*" />
                            <!--  日志  -->
                        </Grid.RowDefinitions>
                        <Grid Grid.Column="0">
                            <!--  图表  -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <!--  图表  -->
                                <ColumnDefinition Width="100" />
                                <!--  图表菜单  -->
                            </Grid.ColumnDefinitions>
                            <Grid Name="chartGrid" Grid.Column="0">
                                <!--  图表  -->
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid Name="chart" Grid.Row="1">
                                    <wpf:WpfPlot Name="wpfPlot" />
                                </Grid>
                            </Grid>

                            <Grid Name="chartFlag" Grid.Column="1">
                                <!--  图表选项  -->
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40" />
                                    <RowDefinition Height="40" />
                                    <RowDefinition Height="40" />
                                    <RowDefinition Height="40" />
                                    <RowDefinition Height="40" />
                                    <RowDefinition Height="40" />
                                </Grid.RowDefinitions>
                                <CheckBox
                                    Name="Air"
                                    Grid.Row="0"
                                    IsChecked="True"
                                    Tag="0"
                                    Unchecked="cb_checkChanged">
                                    Air
                                </CheckBox>
                                <CheckBox
                                    Name="DO"
                                    Grid.Row="1"
                                    IsChecked="True"
                                    Tag="1"
                                    Unchecked="cb_checkChanged">
                                    DO
                                </CheckBox>
                                <CheckBox
                                    Name="Temp"
                                    Grid.Row="2"
                                    IsChecked="True"
                                    Tag="0"
                                    Unchecked="cb_checkChanged">
                                    Temp
                                </CheckBox>
                                <CheckBox
                                    Name="PH"
                                    Grid.Row="3"
                                    IsChecked="True"
                                    Tag="1"
                                    Unchecked="cb_checkChanged">
                                    PH
                                </CheckBox>
                                <CheckBox
                                    Name="Agit"
                                    Grid.Row="4"
                                    IsChecked="True"
                                    Tag="0"
                                    Unchecked="cb_checkChanged">
                                    Agit
                                </CheckBox>
                                <CheckBox Grid.Row="5" Visibility="Hidden">
                                    pH
                                </CheckBox>
                            </Grid>
                        </Grid>
                        <DataGrid
                            Name="LogDetail"
                            Grid.Row="1"
                            Background="{x:Null}">
                            <!--  设备详情  -->
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="70" Header="记录ID" />
                                <DataGridTextColumn Width="70" Header="反应器" />
                                <DataGridTextColumn Width="70" Header="批次ID" />
                                <DataGridTextColumn Width="100" Header="日期和时间" />
                                <DataGridTextColumn Width="*" Header="事件和评论" />
                                <DataGridTextColumn Width="80" Header="记录类型" />
                                <DataGridTextColumn Width="70" Header="操作员" />
                                <DataGridTextColumn Width="70" Header="来宾" />
                                <DataGridTextColumn Width="70" Header="状态" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>

            </Grid>
        </materialDesign:DialogHost>
    </Border>
</Window>
