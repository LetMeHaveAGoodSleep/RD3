<UserControl
    x:Class="RD3.Views.CalibrationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="clr-namespace:RD3.Behaviors"
    xmlns:common="clr-namespace:RD3.Common"
    xmlns:cv="clr-namespace:RD3.Common.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ex="clr-namespace:LayUI.Wpf.Extensions;assembly=LayUI.Wpf.Extensions"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:RD3.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:share="clr-namespace:RD3.Shared;assembly=RD3.Shared"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:vm="clr-namespace:RD3.ViewModels"
    xmlns:wpf="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    Width="auto"
    Height="auto"
    MinWidth="1600"
    MinHeight="900"
    d:DataContext="{d:DesignInstance Type=vm:ReactorViewModel}"
    d:DesignHeight="900"
    d:DesignWidth="1600"
    Background="{StaticResource BackGroundBrush}"
    TextElement.FontFamily="{DynamicResource AppFontFamily}"
    TextElement.FontSize="{DynamicResource TextFontSize}"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <Setter Property="ResizeMode" Value="CanResize" />
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterOwner" />
            <Setter Property="Width" Value="{Binding FormWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="Height" Value="{Binding FormHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="Left" Value="{Binding LeftLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="Top" Value="{Binding TopLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="ShowInTaskbar" Value="True" />
            <Setter Property="AllowsTransparency" Value="False" />
            <Setter Property="WindowStyle" Value="SingleBorderWindow" />
            <Setter Property="WindowState" Value="{Binding FormState, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Setter Property="Background" Value="{StaticResource BackGroundBrush}" />
            <Setter Property="Opacity" Value="1" />
            <Setter Property="Icon" Value="../Assets/logo.png" />
        </Style>
    </prism:Dialog.WindowStyle>
    <TabControl Style="{StaticResource TabControlBaseStyle}">
        <TabItem Header="传感器校准" IsSelected="True">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <hc:UniformSpacingPanel Orientation="Vertical" Spacing="10">
                    <Border
                        Height="30"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="8">
                        <hc:ScrollViewer
                            hc:ScrollViewerAttach.AutoHide="True"
                            hc:ScrollViewerAttach.Orientation="Vertical"
                            HorizontalScrollBarVisibility="Auto"
                            VerticalScrollBarVisibility="Auto">
                            <hc:UniformSpacingPanel Name="ChkList" Spacing="10">
                                <CheckBox
                                    Name="ChkAll"
                                    Content="{ex:Language Key='Select all'}"
                                    IsChecked="True" />
                            </hc:UniformSpacingPanel>
                        </hc:ScrollViewer>
                    </Border>
                    <DockPanel HorizontalAlignment="Left" LastChildFill="False">
                        <Border
                            Height="45"
                            Background="{DynamicResource BorderBrush}"
                            BorderThickness="0.5"
                            CornerRadius="8">
                            <hc:ButtonGroup
                                Name="ButtonGroup"
                                VerticalAlignment="Center"
                                Style="{StaticResource ButtonGroupSolid}">
                                <RadioButton
                                    Width="80"
                                    Height="35"
                                    Margin="5,0,0,0"
                                    hc:BorderElement.CornerRadius="8"
                                    Background="{DynamicResource BorderBrush}"
                                    Checked="ToggleButtonGraphParam_CheckChanged"
                                    Content="{ex:Language Key='Temp'}"
                                    FontSize="{DynamicResource MediumFontSize}"
                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                    IsChecked="{Binding CalibrationModule, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Temp}"
                                    Tag="Temp"
                                    Unchecked="ToggleButtonGraphParam_CheckChanged" />
                                <RadioButton
                                    Width="80"
                                    Height="35"
                                    Margin="5,0,5,0"
                                    hc:BorderElement.CornerRadius="8"
                                    Background="{DynamicResource BorderBrush}"
                                    Checked="ToggleButtonGraphParam_CheckChanged"
                                    Content="{ex:Language Key='PH'}"
                                    FontSize="{DynamicResource SubHeadFontSize}"
                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                    IsChecked="{Binding CalibrationModule, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=PH}"
                                    Tag="PH"
                                    Unchecked="ToggleButtonGraphParam_CheckChanged" />
                                <RadioButton
                                    Width="80"
                                    Height="35"
                                    Margin="5,0,5,0"
                                    hc:BorderElement.CornerRadius="8"
                                    Background="{DynamicResource BorderBrush}"
                                    Checked="ToggleButtonGraphParam_CheckChanged"
                                    Content="{ex:Language Key='DO'}"
                                    FontSize="{DynamicResource SubHeadFontSize}"
                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                    IsChecked="{Binding CalibrationModule, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=DO}"
                                    Tag="DO"
                                    Unchecked="ToggleButtonGraphParam_CheckChanged" />
                                <RadioButton
                                    Width="80"
                                    Height="35"
                                    Margin="5,0,5,0"
                                    hc:BorderElement.CornerRadius="8"
                                    Background="{DynamicResource BorderBrush}"
                                    Checked="ToggleButtonGraphParam_CheckChanged"
                                    Content="{ex:Language Key='Weight1'}"
                                    FontSize="{DynamicResource SubHeadFontSize}"
                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                    IsChecked="{Binding CalibrationModule, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=JarWeight}"
                                    Tag="JarWeight"
                                    Unchecked="ToggleButtonGraphParam_CheckChanged" />
                                <RadioButton
                                    Width="80"
                                    Height="35"
                                    Margin="5,0,5,0"
                                    hc:BorderElement.CornerRadius="8"
                                    Background="{DynamicResource BorderBrush}"
                                    Checked="ToggleButtonGraphParam_CheckChanged"
                                    Content="{ex:Language Key='Weight2'}"
                                    FontSize="{DynamicResource SubHeadFontSize}"
                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                    IsChecked="{Binding CalibrationModule, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Bottle1Weight}"
                                    Tag="Bottle1Weight"
                                    Unchecked="ToggleButtonGraphParam_CheckChanged" />
                                <RadioButton
                                    Width="80"
                                    Height="35"
                                    Margin="5,0,5,0"
                                    hc:BorderElement.CornerRadius="8"
                                    Background="{DynamicResource BorderBrush}"
                                    Checked="ToggleButtonGraphParam_CheckChanged"
                                    Content="{ex:Language Key='Weight3'}"
                                    FontSize="{DynamicResource SubHeadFontSize}"
                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                    IsChecked="{Binding CalibrationModule, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Bottle2Weight}"
                                    Tag="Bottle2Weight"
                                    Unchecked="ToggleButtonGraphParam_CheckChanged" />
                            </hc:ButtonGroup>
                        </Border>
                    </DockPanel>
                    <Border Height="340" Style="{StaticResource BorderCommon}">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <hc:UniformSpacingPanel
                                Name="ReactorPanel"
                                Orientation="Vertical"
                                Spacing="5" />
                        </ScrollViewer>
                    </Border>
                </hc:UniformSpacingPanel>
                <Border
                    Grid.Row="1"
                    Margin="0,10,0,10"
                    Style="{StaticResource BorderCommon}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <hc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="Running time:" />
                            <TextBlock Text="{Binding FormattedTime}" />
                        </hc:UniformSpacingPanel>
                        <wpf:WpfPlot Name="wpfPlot1" Grid.Row="1" />
                    </Grid>
                </Border>
            </Grid>
        </TabItem>
        <TabItem Header="蠕动泵校准">
            <DockPanel Margin="10" LastChildFill="True">
                <ComboBox
                    Width="300"
                    Height="40"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Left"
                    hc:InfoElement.ShowClearButton="True"
                    DockPanel.Dock="Top"
                    ItemsSource="{Binding Instruments}"
                    SelectedItem="{Binding SelectedInstrument}" />
                <Border Style="{StaticResource BorderCommon}">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <hc:UniformSpacingPanel
                            Name="PumpPanel"
                            Orientation="Vertical"
                            Spacing="10" />
                    </ScrollViewer>
                </Border>
            </DockPanel>
        </TabItem>
    </TabControl>
</UserControl>
