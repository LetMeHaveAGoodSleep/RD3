                <hc:SideMenu
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Margin="20,10,0,5"
                    hc:AutoSelect="False"
                    hc:ExpandMode="Freedom"
                    Background="Transparent"
                    BorderThickness="0">
                    <hc:Interaction.Triggers>
                        <hc:EventTrigger EventName="SelectionChanged">
                            <hc:EventToCommand Command="{Binding SwitchItemCmd}" PassEventArgsToCommand="True" />
                        </hc:EventTrigger>
                    </hc:Interaction.Triggers>
                    <hc:SideMenuItem
                        Background="{StaticResource PrimaryMenuBrush}"
                        FontSize="22"
                        Foreground="WhiteSmoke"
                        Header="Home">
                        <hc:SideMenuItem.Icon>
                            <materialDesign:PackIcon
                                Width="36"
                                Height="36"
                                Kind="Home" />
                        </hc:SideMenuItem.Icon>
                    </hc:SideMenuItem>
                    <hc:SideMenuItem
                        Background="{StaticResource PrimaryMenuBrush}"
                        FontSize="22"
                        Foreground="WhiteSmoke"
                        Header="Projects">
                        <hc:SideMenuItem.Icon>
                            <materialDesign:PackIcon
                                Width="36"
                                Height="36"
                                Kind="FolderOpen" />
                        </hc:SideMenuItem.Icon>
                    </hc:SideMenuItem>
                    <hc:SideMenuItem
                        Background="{StaticResource PrimaryMenuBrush}"
                        FontSize="22"
                        Foreground="WhiteSmoke"
                        Header="Data">
                        <hc:SideMenuItem.Icon>
                            <materialDesign:PackIcon
                                Width="36"
                                Height="36"
                                Kind="Database" />
                        </hc:SideMenuItem.Icon>
                        <hc:SideMenuItem
                            Background="{StaticResource PrimaryMenuBrush}"
                            Command="{Binding SelectCmd}"
                            CommandParameter="{Binding Header, RelativeSource={RelativeSource Self}}"
                            Foreground="WhiteSmoke"
                            Header="Batches">
                            <hc:SideMenuItem.Icon>
                                <materialDesign:PackIcon
                                    Width="36"
                                    Height="36"
                                    Kind="Database" />
                            </hc:SideMenuItem.Icon>
                        </hc:SideMenuItem>
                        <hc:SideMenuItem
                            Background="{StaticResource PrimaryMenuBrush}"
                            Command="{Binding SelectCmd}"
                            CommandParameter="{Binding Header, RelativeSource={RelativeSource Self}}"
                            Foreground="WhiteSmoke"
                            Header="Events">
                            <hc:SideMenuItem.Icon>
                                <materialDesign:PackIcon
                                    Width="36"
                                    Height="36"
                                    Kind="Database" />
                            </hc:SideMenuItem.Icon>
                        </hc:SideMenuItem>
                        <hc:SideMenuItem
                            Background="{StaticResource PrimaryMenuBrush}"
                            Command="{Binding SelectCmd}"
                            CommandParameter="{Binding Header, RelativeSource={RelativeSource Self}}"
                            Foreground="WhiteSmoke"
                            Header="Samples">
                            <hc:SideMenuItem.Icon>
                                <materialDesign:PackIcon
                                    Width="36"
                                    Height="36"
                                    Kind="Database" />
                            </hc:SideMenuItem.Icon>
                        </hc:SideMenuItem>
                        <hc:SideMenuItem
                            Background="{StaticResource PrimaryMenuBrush}"
                            Command="{Binding SelectCmd}"
                            CommandParameter="{Binding Header, RelativeSource={RelativeSource Self}}"
                            Foreground="WhiteSmoke"
                            Header="Database">
                            <hc:SideMenuItem.Icon>
                                <materialDesign:PackIcon
                                    Width="36"
                                    Height="36"
                                    Kind="Database" />
                            </hc:SideMenuItem.Icon>
                        </hc:SideMenuItem>
                    </hc:SideMenuItem>
                    <hc:SideMenuItem
                        Background="{StaticResource PrimaryMenuBrush}"
                        FontSize="22"
                        Foreground="WhiteSmoke"
                        Header="Control">
                        <hc:SideMenuItem.Icon>
                            <materialDesign:PackIcon
                                Width="36"
                                Height="36"
                                Kind="AlphaCBoxOutline" />
                        </hc:SideMenuItem.Icon>
                    </hc:SideMenuItem>
                    <hc:SideMenuItem
                        Background="{StaticResource PrimaryMenuBrush}"
                        FontSize="22"
                        Foreground="WhiteSmoke"
                        Header="Advance">
                        <hc:SideMenuItem.Icon>
                            <materialDesign:PackIcon
                                Width="36"
                                Height="36"
                                Kind="ViewGridOutline" />
                        </hc:SideMenuItem.Icon>
                    </hc:SideMenuItem>
                    <hc:SideMenuItem
                        Background="{StaticResource PrimaryMenuBrush}"
                        FontSize="22"
                        Foreground="WhiteSmoke"
                        Header="Settings">
                        <hc:SideMenuItem.Icon>
                            <materialDesign:PackIcon
                                Width="36"
                                Height="36"
                                Kind="CogOutline" />
                        </hc:SideMenuItem.Icon>
                    </hc:SideMenuItem>
                </hc:SideMenu>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel
                    Name="WindowHeader"
                    FlowDirection="RightToLeft"
                    Orientation="Horizontal">
                    <Button
                        Name="btnClose"
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Stretch"
                        Background="Transparent"
                        BorderThickness="0">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            Foreground="Gray"
                            Kind="Close" />
                    </Button>
                    <Button
                        Name="btnMax"
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Stretch"
                        Background="Transparent"
                        BorderThickness="0">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            Foreground="Gray"
                            Kind="WindowMaximize" />
                    </Button>
                    <Button
                        Name="btnMin"
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Stretch"
                        Background="Transparent"
                        BorderThickness="0">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            Foreground="Gray"
                            Kind="Minus" />
                    </Button>
                    <TextBlock
                        Margin="100,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="{Binding UserName}" />
                    <Button
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Stretch"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding UserCenterCommand}"
                        ToolTip="User Setting">
                        <materialDesign:PackIcon
                            Width="36"
                            Height="36"
                            Foreground="Gray"
                            Kind="AccountCircle" />
                    </Button>
                </StackPanel>
                <ContentControl Grid.Row="1" prism:RegionManager.RegionName="{x:Static ext:PrismManager.MainViewRegionName}" />
            </Grid>
            <materialDesign:Snackbar
                x:Name="Snackbar"
                Panel.ZIndex="1"
                MessageQueue="{materialDesign:MessageQueue}" />
        </Grid>
    </materialDesign:DialogHost>
</Window>
